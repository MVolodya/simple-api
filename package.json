{
  "name": "simple-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "npm:update": "./node_modules/.bin/npm-check-updates -a -u && rm -rf node_modules yarn.lock && yarn",
    "start": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node ./src/server.ts",
    "prettier": "./node_modules/.bin/prettier --write ./src/**/*.{ts,json}",
    "tslint": "./node_modules/.bin/tslint --project tsconfig.json --format stylish",
    "tslint:fix": "./node_modules/.bin/tslint --project tsconfig.json --fix",
    "pre-commit": "yarn tslint:fix && yarn prettier",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MVolodya/simple-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MVolodya/simple-api/issues"
  },
  "homepage": "https://github.com/MVolodya/simple-api#readme",
  "dependencies": {
    "koa": "^2.6.2",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.4.0"
  },
  "devDependencies": {
    "@types/koa": "^2.0.47",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-router": "^7.0.35",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.8",
    "npm-check-updates": "^2.15.0",
    "prettier": "^1.15.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json,md}": [
      "yarn pre-commit",
      "git add"
    ]
  }
}
